<h1>New user</h1>

<% form_for @user, :html => {:id => "frm-user"} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username, :id => "username" %>
    <!--<input type="hidden" id="old-username" value="">-->
    <span class="message loading" id="loading" style="display:none;">dang kiem tra...</span>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email, :id => "email" %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>